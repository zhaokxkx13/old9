    <select id="findByAcc" resultType="com.cn.iris.admin.entity.User" parameterType="java.lang.String">
        SELECT id, user_acc, user_psw, nick_name, avatar, create_time, description, salt, status,role_id from sys_user where user_acc=#{user_acc}
    </select>

    <select id="selectUserList" resultType="com.cn.iris.admin.entity.User">
        SELECT id, user_acc, user_psw, nick_name, avatar, create_time, description, salt, status,role_id FROM sys_user
    </select>

</mapper>